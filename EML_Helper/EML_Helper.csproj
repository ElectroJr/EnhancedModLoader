<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <Platforms>AnyCPU;x64</Platforms>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <RuntimeFrameworkVersion>9.0.2</RuntimeFrameworkVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Lib.Harmony" Version="2.3.5" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Cosmoteer">
      <HintPath>..\..\CosmoteerMods\Cosmoteer-publicized.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="HalflingCore">
      <HintPath>..\..\CosmoteerMods\HalflingCore-publicized.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

  </Project>
